<div class="row">
<div class="col-1"></div>
<div class="my-3 py-3 col-11">
<% if @idea.errors.any? %>
  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model:@idea do |form|%>

    <%= form.label :title%>
    <br>
    <%= form.text_field :title%>
    <br>
    <%= form.label :description%>
    <br>
    <%= form.text_area :description%>
    <br>
    <%= form.submit nil, class:"btn btn-outline-primary" %>
<% end %>
</div>
</div>